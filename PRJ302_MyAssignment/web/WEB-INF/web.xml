<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee                               http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LeaveRequestListController</servlet-name>
        <servlet-class>controller.user.LeaveRequestListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LeaveRequestApproveController</servlet-name>
        <servlet-class>controller.user.LeaveRequestApproveController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LeaveRequestAgendaController</servlet-name>
        <servlet-class>controller.user.LeaveRequestAgendaController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!-- Home Servlet -->
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.home.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <!-- LeaveRequest Create Servlet -->
    <servlet>
        <servlet-name>LeaveRequestCreateController</servlet-name>
        <servlet-class>controller.user.LeaveRequestCreateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LeaveRequestCreateController</servlet-name>
        <url-pattern>/leaverequest/create</url-pattern>
    </servlet-mapping>
    <!-- Welcome files -->
    <servlet-mapping>
        <servlet-name>LeaveRequestListController</servlet-name>
        <url-pattern>/leaverequest/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LeaveRequestApproveController</servlet-name>
        <url-pattern>/leaverequest/approve</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LeaveRequestAgendaController</servlet-name>
        <url-pattern>/leaverequest/agenda</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
